{% from 'BtnAdminBundle:Macros:breadcrumb.html.twig' import breadcrumb %}
{% extends 'BtnAdminBundle::base.html.twig' %}

{% block content %}

    <h2>{% trans %}page.show{% endtrans %}</h2>

    <table class="table table-striped table-bordered table-condensed">
        <tbody>
            <tr>
                <th>{% trans %}page.id{% endtrans %}</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}page.title{% endtrans %}</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>{% trans %}page.content{% endtrans %}</th>
                <td>{{ entity.content|raw }}</td>
            </tr>
        </tbody>
    </table>

    <form action="{{ path('cp_page_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <a href="{{ path('cp_page') }}" class="btn">
            &laquo; {% trans %}btn_admin.back{% endtrans %}
        </a>
        <button type="submit" data-confirmation="true" data-message="{% trans %}crud.confirm.message{% endtrans %}" data-title="{% trans %}crud.confirm.title{% endtrans %}" class="btn btn-danger delete">{% trans %}btn_admin.delete{% endtrans %}</button>
    </form>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_page': 'btn_admin.list', 'cp_page_show': 'btn_admin.show'}) }}
{% endblock %}
