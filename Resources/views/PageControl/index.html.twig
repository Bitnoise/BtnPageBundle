{% from 'BtnAdminBundle:Macros:breadcrumb.html.twig' import breadcrumb %}
{% extends 'BtnAdminBundle::base.html.twig' %}

{% block content %}
    <h2>{% trans %}page.list{% endtrans %}</h2>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th class="btn-control-column-id">{% trans %}page.id{% endtrans %}</th>
                <th>{% trans %}page.title{% endtrans %}</th>
                <th>{% trans %}btn_admin.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td class="btn-control-column-id">{{ entity.id }}</td>
                <td>{{ entity.title }}</td>
                <td>
                    <a href="{{ path('cp_page_edit', { 'id': entity.id }) }}" class="btn btn-primary button-edit">{% trans %}btn_admin.edit{% endtrans %}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(pagination) }}

    <a href="{{ path('cp_page_new') }}" class="btn btn-primary">{% trans %}btn_admin.add{% endtrans %}</a>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_page': 'btn_admin.list'}) }}
{% endblock %}
