{% from 'BtnCrudBundle::breadcrumb.html.twig' import breadcrumb %}
{% extends '::control.html.twig' %}

{% block content %}
    <h2>{% trans %}page.list{% endtrans %}</h2>

    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>{% trans %}page.id{% endtrans %}</th>
                <th>{% trans %}page.title{% endtrans %}</th>
                <th>{% trans %}crud.actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.title }}</td>
                <td>
                    <a href="{{ path('cp_page_show', { 'id': entity.id }) }}" class="btn btn-primary button-show">{% trans %}crud.show{% endtrans %}</a>
                    <a href="{{ path('cp_page_edit', { 'id': entity.id }) }}" class="btn btn-primary button-edit">{% trans %}crud.edit{% endtrans %}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(pagination) }}

    <a href="{{ path('cp_page_new') }}" class="btn btn-primary">{% trans %}crud.create_new{% endtrans %}</a>

{% endblock %}

{% block breadcrumb %}
    {{ breadcrumb({'cp_page': 'crud.breadcrumb.list'}) }}
{% endblock %}
